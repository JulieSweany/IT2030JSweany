@model IEnumerable<EventApplication.Models.Event>

@{
    ViewBag.Title = "Event Site Home";
}

<div class="jumbotron">
    <h1>Event Unlimited</h1>
    <p class="lead">Find events near you. Never miss out again!</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>

    <div class="col-md-6">
        @using (Ajax.BeginForm("LastMinuteDeals", "EventSite",
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET",
            LoadingElementId = "ajax-loader",
            UpdateTargetId = "lastminutedeals",
        }))
        {
            <div id="lastminutedeals">
                <input type="submit" value="Click here for Last Minute Deals!" />
            </div>
            <image id="ajax-loader"
                   src="@Url.Content("~/Images/ajax-loader.gif")"
                   style="display:none" />
        }

    </div>
</div>